<div class="container">
      <h4> Please Type the Name of the Physician You want to search </h4>
      <form method="POST" action="/query" name="Form">
        <label>FirstName</label><br>
        <input type="text" name="first_name">
        <br>

        <label>MiddleName</label><br>
        <input type="text" name="middle_name">
      
        <br>
        <label>LastName</label><br>
        <input type="text" name="last_name">
      
        <br><br>
        <input onclick="return validateForm();" type="submit" value="Submit"/>
      </form>
          <h3 style="color:red"> The Physician is Here:</h3>
          <h2>  <%= addr %> </h2>

    </div>



    <div id="map"></div>
    
    <script type="text/javascript">

    function validateForm()
    {
        var a=document.forms["Form"]["first_name"].value;
        var b=document.forms["Form"]["last_name"].value;
        if (a==null || a=="",b==null || b=="")
        {
            alert("Both First Name and Last Name are required");
            return false;
        }
        return true;
    }
    </script>


    <script>

      function initMap() {
        console.log(<%=location.lng%>);
        console.log(<%=location.lat%>);
        var lg = <%=location.lng%>;
        var lt = <%=location.lat%>;
        var myLatLng = {lat: lt, lng: lg};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDS3LZoWaHpV-S1u-AFCqSoWbpY0l16eQ
